{block content}

{form form}

<div class="row">
	<div class="col-sm-6">
		<div class="card">
			<div class="card-header">
				<strong>{='user'|translate}</strong>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12">
						<div class="form-group">
							{label \PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_EMAIL:}
							<input n:name="\PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_EMAIL" class="form-control" type="email">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<div class="form-group">
							{label \PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_FIRST_NAME:}
							<input n:name="\PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_FIRST_NAME" class="form-control" type="text">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<div class="form-group">
                            {label \PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_LAST_NAME:}
							<input n:name="\PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_LAST_NAME" class="form-control" type="text">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<div class="form-group row">
                            {label \PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_ADMINISTRATOR:, class => 'col-md-3 col-form-label'}
							<div class="col-md-9 col-form-label">
								<div class="form-check form-check-inline mr-1">
									<input class="form-check-input" n:name="\PeckaDesk\Dashboard\Users\Forms\EditFormFactory::CONTROL_ADMINISTRATOR" type="checkbox">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<button n:name="save" class="btn btn-sm btn-primary" type="submit">Submit</button>
				<button class="btn btn-sm btn-danger" type="reset">Reset</button>
			</div>
		</div>
	</div>
</div>

{/form}
